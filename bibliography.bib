	journal = {The Condor},
	author = {Hudson, Marie-Anne R. and Francis, Charles M. and Campbell, Kate J. and Downes, Constance M. and Smith, Adam C. and Pardieck, Keith L.},
	month = aug,
	year = {2017},
	pages = {526--545},
	annote = {Several key use cases of the North American breeding bird survey are outlined here. Answers the question "why is the BBS the gold standard of bird surveys"},
