	author = {Roberts, Caleb P. and Uden, Daniel R. and Cady, Samantha M. and Allred, Brady and Fuhlendorf, Samuel and Jones, Matthew O. and Maestas, Jeremy D. and Naugle, David and Olsen, Andrew C. and Smith, Joseph and Tack, Jason and Twidwell, Dirac},
	month = jan,
